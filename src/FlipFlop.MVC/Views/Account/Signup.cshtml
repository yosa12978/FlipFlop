@{
    ViewData["Title"] = "Signup - FlipFlop";
}

<h1>Signup</h1>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert" style="width: 100%; max-width:500px;">
        @ViewBag.Error
    </div>
}
<form action="/account/signup" method="post" style="width: 100%; max-width:500px;">
    <input name="username" class="form-control" placeholder="username"/><br>
    <input name="password" type="password" class="form-control" placeholder="password"/><br>
    <input name="passwordC" type="password" class="form-control" placeholder="password confirm"/><br>
    <button type="submit" class="btn btn-danger" style="width: 100%;">Signup</button>
</form>